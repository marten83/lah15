<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MyActivity"
    android:id="@+id/drawer"
    android:background="#FFFFFF"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/activityRoot"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:descendantFocusability="beforeDescendants"
        android:background="#FFFFFF"
        android:focusableInTouchMode="true">

        <EditText
            android:id="@+id/search"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:textSize="14dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_margin="5dp"
            android:background="@drawable/input_border"
            android:hint="Sök efter artist eller genre.">
        </EditText>

        <LinearLayout
            android:id="@+id/sok"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="15dip"
            android:layout_marginTop="15dip"
            android:layout_gravity="top|end">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:src="@drawable/sok"
                android:gravity="center"
                android:contentDescription="@null"
                android:scaleType="fitXY"/>

        </LinearLayout>

        <ListView
            android:id="@+id/listview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/search"
            android:background="@android:color/transparent"
            android:layout_marginTop="50dp"
            android:smoothScrollbar="true"
            android:scrollingCache="false"
            android:animationCache="false"
            android:choiceMode="singleChoice"/>

        <LinearLayout
            android:id="@+id/follow_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dip"
            android:layout_marginStart="10dip"
            android:layout_marginBottom="10dip"
            android:layout_gravity="bottom|start">

            <ImageButton
                android:id="@+id/toTop"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/heart1"
                android:background="@drawable/round"
                android:gravity="center"
                android:contentDescription="@null"
                android:scaleType="fitCenter"
                android:onClick="onFollow" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dip"
            android:layout_marginBottom="10dip"
            android:layout_gravity="bottom|end">

            <ImageButton
                android:id="@+id/manu"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/menu"
                android:background="@drawable/round"
                android:gravity="center"
                android:contentDescription="@null"
                android:scaleType="fitCenter"
                android:onClick="onMenu" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/cheme_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="70dip"
            android:layout_marginBottom="10dip"
            android:layout_gravity="bottom|start">

            <ImageButton
                android:id="@+id/chem"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/clock"
                android:background="@drawable/round"
                android:gravity="center"
                android:contentDescription="@null"
                android:scaleType="fitCenter"
                android:onClick="onChem" />

        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/drawerList"
        android:layout_width="280dp"
        android:layout_height="fill_parent"
        android:layout_gravity="start"
        android:background="#353535"
        android:clickable="true"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/menu1"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:gravity="left"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:baselineAligned="false"
            android:onClick="onMenuBtn1">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="fill_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/clock"
                android:gravity="left"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10dp"
                android:lines="1"
                android:textColor="#ffffff"
                android:gravity="center"
                android:textStyle="bold"
                android:text="SPELSCHEMA" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu2"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:gravity="left"
            android:background="@android:color/transparent"
            android:baselineAligned="false"
            android:onClick="onMenuBtn2">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="fill_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/heart1"
                android:gravity="left"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10dp"
                android:lines="1"
                android:textColor="#ffffff"
                android:gravity="center"
                android:textStyle="bold"
                android:text="ARTISTER JAG FÖLJER" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu3"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:gravity="left"
            android:background="@android:color/transparent"
            android:baselineAligned="false"
            android:onClick="onMenuBtn3">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="fill_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/info"
                android:gravity="left"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10dp"
                android:lines="1"
                android:textColor="#ffffff"
                android:gravity="center"
                android:textStyle="bold"
                android:text="OM LAH15" />

        </LinearLayout>

    </LinearLayout>
</android.support.v4.widget.DrawerLayout>